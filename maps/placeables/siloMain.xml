<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="silo">
    <storeData>
        <name>
            Silo Main Farm
        </name>
        <functions>
            <function>$l10n_function_Storage</function>
        </functions>
        <image>store.dds</image>
        <price>90000</price>
        <lifetime>500</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>silos</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>silos</tab>
        </brush>
    </storeData>

    <base>
        <filename>maps/placeables/siloMain.i3d</filename>
        <canBeRenamed>true</canBeRenamed>
		<boughtWithFarmland>true</boughtWithFarmland>
    </base>

    <placement/>

    <clearAreas/>

    <leveling/>

    <indoorAreas/>

    <tipOcclusionUpdateAreas>
        <tipOcclusionUpdateArea startNode="tipOcclusionUpdateArea1Start" endNode="tipOcclusionUpdateArea1End" />
    </tipOcclusionUpdateAreas>

    <ai>
        <updateAreas>
            <updateArea startNode="tipOcclusionUpdateArea1Start" endNode="tipOcclusionUpdateArea1End" />
        </updateAreas>
        <splines>
            <spline node="aiSpline" />
        </splines>
    </ai>

    <infoTrigger triggerNode="infoTrigger"/>

    <silo>
        <loadingStation node="loadingTrigger" supportsExtension="true" storageRadius="50">
            <loadTrigger triggerNode="loadingTrigger" fillLitersPerSecond="2000" dischargeNode="dischargeNode" fillTypes="WHEAT" aiNode="aiLoadingNode">
                <effectNode effectClass="PipeEffect" effectNode="pipeEffect"      materialType="pipe"           fadeTime="0.5" maxBending="0" controlPoint="4.8 0 0 0" />
                <effectNode                          effectNode="pipeEffectSmoke" materialType="unloadingSmoke" fadeTime="0.5" />
            </loadTrigger>
        </loadingStation>

        <unloadingStation supportsExtension="true" storageRadius="50">
            <unloadTrigger exactFillRootNode="exactFillRootNode" fillTypes="WHEAT" aiNode="aiUnloadingNode"/>
        </unloadingStation>

        <storages>
            <storage node="storage" fillTypes="WHEAT" capacity="2000000" isExtension="true"/>
        </storages>

        <loadingStation node="loadingTrigger" supportsExtension="true" storageRadius="50">
            <loadTrigger triggerNode="loadingTriggerBarley" fillLitersPerSecond="2000" dischargeNode="dischargeNodeBarley" fillTypes="BARLEY" aiNode="aiLoadingNode">
                <effectNode effectClass="PipeEffect" effectNode="pipeEffect"      materialType="pipe"           fadeTime="0.5" maxBending="0" controlPoint="4.8 0 0 0" />
                <effectNode                          effectNode="pipeEffectSmoke" materialType="unloadingSmoke" fadeTime="0.5" />
            </loadTrigger>
        </loadingStation>

        <unloadingStation supportsExtension="true" storageRadius="50">
            <unloadTrigger exactFillRootNode="exactFillRootNodeBarley" fillTypes="BARLEY" aiNode="aiUnloadingNode"/>
        </unloadingStation>

        <storages>
            <storage node="storage" fillTypes="BARLEY" capacity="2000000" isExtension="true"/>
        </storages>
    </silo>

    <hotspots>
        <hotspot type="UNLOADING" linkNode="mapPosition" />
    </hotspots>

    <triggerMarkers>
        <triggerMarker node="markerLoading"   filename="$data/shared/assets/marker/markerIcons.xml" id="LOAD" />
        <triggerMarker node="markerUnloading" filename="$data/shared/assets/marker/markerIcons.xml" id="UNLOAD" />
    </triggerMarkers>

    <i3dMappings>
        <i3dMapping id="mapPosition" node="0>0|3" />
        <i3dMapping id="storage" node="0>0|2" />
        <i3dMapping id="loadingTrigger" node="0>0|1|0" />
        <i3dMapping id="dischargeNode" node="0>0|1|1" />
        <i3dMapping id="loadingTriggerBarley" node="0>1|1|0" />
        <i3dMapping id="dischargeNodeBarley" node="0>1|1|1" />
        <i3dMapping id="exactFillRootNodeBarley" node="0>1|0|0" />











        <i3dMapping id="pipeEffect" node="0>0|1|2|0" />
        <i3dMapping id="pipeEffectSmoke" node="0>0|1|2|1" />
        <i3dMapping id="aiLoadingNode" node="0>0|1|3" />
        <i3dMapping id="markerLoading" node="0>0|1|4" />
        <i3dMapping id="exactFillRootNode" node="0>0|0|0" />
        <i3dMapping id="baleTriggerNode" node="0>0|0|1" />
        <i3dMapping id="aiUnloadingNode" node="0>0|0|2" />
        <i3dMapping id="markerUnloading" node="0>0|0|3" />
        <i3dMapping id="infoTrigger" node="0>0|5" />
        <i3dMapping id="aiSpline" node="0>0|4" />
        <i3dMapping id="tipOcclusionUpdateArea1Start" node="0>1|0" />
        <i3dMapping id="tipOcclusionUpdateArea1End" node="0>1|0|0" />
    </i3dMappings>
</placeable>